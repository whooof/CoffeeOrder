<resources>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorPrimary">#795548</item>
        <item name="colorAccent">#777777</item>

    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/radiobuttonstyle</item>
        <item name="android:button">@drawable/radiobuttonimg</item>
    </style>

    <style name="ToppingsRadioButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:background">@drawable/radiobuttonstyle</item>
        <item name="android:button">@drawable/toppings</item>
    </style>


    <style name="Header" >
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
